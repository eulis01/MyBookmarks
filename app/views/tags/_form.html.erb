<%= render partial: 'layouts/errors', locals: {object: @tag} %>

<%= form_for @tag do |f| %>
        <% if !@tag.bookmark_id %>
                <%= f.label :Select_Bookmark %>
                <%= f.collection_select :bookmark_id, Bookmark.all, :id, :name %><br><br>
        <% else %>
                <%= f.hidden_field :bookmark_id %>
        <% end %>
        <%= f.label :name, 'New Tag Name:' %>
        <%= f.text_field :name %><br><br>
        <%= f.submit %>
<% end %>
