

<%= form_with(model: [@tag.bookmark, @tag]) do |f| %>

  <% if !@tag.bookmark %>
    <%= f.label :bookmark_id, "Bookmark:" %>
    <%= f.collection_select :bookmark_id, Bookmark.all, :id, :name %>
  <% else %>
    <%= f.hidden_field :bookmark_id %>
  <% end %>
  <br><br>

  <%= f.label :name, 'Tag Name:' %>
  <%= f.text_field :name %><br><br>
  <%= f.submit %>
<% end %>
